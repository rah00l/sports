<!DOCTYPE HTML>
<html>
<head>
  <%- title @page_title %>
</head>
<body>
  <div class="container">
    <div class="row">
      <div class="col-md-12 top-margin-50">
        <h2 class="custom-text-color font-bold text-center">All Continents (<%= @continents.size%>)</h2>
      </div>
    </div>
    <div class="row">
      <div class="col-md-2">
        <%= render 'shared/sidebar' %>
      </div>

      <div class="col-md-10" id="sports">
        <% @continents.each do |continent|%>
        <span class="label label-<%= random_class_name %>">
          <%#= link_to continent.name, continent_path(continent) if continent.countries.size > 0 %>
          <%= continent.name if continent.countries.size > 0 %>
        </span>

<!--       <span class="tag tag-default">Default</span>
      <span class="tag tag-primary">Primary</span>
      <span class="tag tag-success">Success</span>
      <span class="tag tag-info">Info</span>
      <span class="tag tag-warning">Warning</span>
      <span class="tag tag-danger">Danger</span> -->
      <% end %>
    </div>

  </div>
  <p>
  </p>
</div>
</body>
</html>