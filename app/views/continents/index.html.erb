<!DOCTYPE HTML>
<html>
<head>
  <%- title @page_title %>
</head>
<body>
  <div class="container">
    <div class="row">
      <div class="col-md-12 top-margin-50">
        <h2 class="custom-text-color font-bold text-center">All Continents (<%= @continent_countries.size%>)</h2>
      </div>
    </div>
    <div class="row">
      <div class="col-md-2">
        <%= render 'shared/sidebar' %>
      </div>

      <div class="col-md-10" id="sports">
        <% @continent_countries.each do |continent, countries|%>
        <h1 class="custom-text-color font-bold">
          <%#= link_to continent.name, continent_path(continent) if continent.countries.size > 0 %>
          <%= continent.name if continent.present?  %><h1>
          <% for country in countries %>
            <span class="label label-<%= random_class_name %> spacer-at-right">
              <strong><%= link_to country.name, country_path(country) if country.present? %></strong>
            </span>
          <% end %>
          <br/>
          <% end %>
        </div>
      </div>
      <p>
      </p>
    </div>
  </body>
  </html>
