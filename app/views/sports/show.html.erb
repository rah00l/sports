<!DOCTYPE HTML>
<html>
<head>
	<%- title @page_title %>
</head>
<body>
	<!-- Main -->
	<div class="container">
		<div id="preview">
			<div class="innr">
				<div class="row">
					<div class="image fit col-md-12">
						<%= image_tag @sport.attachments.last.file.url(:main).split('/').last  if @sport.attachments.present? %>
					</div>
				</div>
				<div class="row">
					<div class="content col-md-9">
						<header>
							<h2 class="font-bold"><%= @sport.name %></h2>
						</header>
						<div class="row">
							<% class_name = @sport.info_box.present? ? 'col-md-5' : 'col-md-12' %>
							<% if @sport.info_box.present?%>
								<!-- Vcart information -->
								<div class="col-md-5">
									<%= render 'sports_vcard' %>
								</div>
								<!-- Vcart information -->
								<% end %>
							<!-- Basic Inforation about sport -->
							<div class="<%= class_name %>">
								<h1 class="custom-text-color font-bold">Basics</h1>
								<p><%= @sport.basic_info %></p>
							</div>
							<!-- Basic Inforation about sport -->
						</div>

						<!-- History of sport -->
						<h1 class="custom-text-color font-bold">History</h1>

						<p><%= @sport.history %></p>
						<!-- History of sport -->

						<!-- Rules & regulations of sport -->
						<h1 class="custom-text-color font-bold">Rules & regulations</h1>
						<ul class="">
							<% @sport.rules.each do |rule| %>
							   <li class=""><%= rule.description %></li>
							<% end %>
						</ul>
						<!-- Rules & regulations of sport -->

						<h1 class="custom-text-color font-bold">Popularity - List of <%= @sport.name %> Playing Countries</h1>
						More than <%= @sport.countries.size %> countries that play <%= @sport.name %>.
							<div class="well">
								<%= @sport.countries.map(&:name).join(', ') %>
							</div>
					</div>
					<div class="col-md-3 top-margin-50">
						<%= render 'shared/sidebar' %>
					</div>
				</div>
				<div class="row">
					<div id="disqus_thread"></div>
					<script>

					/**
					*  RECOMMENDED CONFIGURATION VARIABLES: EDIT AND UNCOMMENT THE SECTION BELOW TO INSERT DYNAMIC VALUES FROM YOUR PLATFORM OR CMS.
					*  LEARN WHY DEFINING THESE VARIABLES IS IMPORTANT: https://disqus.com/admin/universalcode/#configuration-variables*/
					/*
					var disqus_config = function () {
					this.page.url = PAGE_URL;  // Replace PAGE_URL with your page's canonical URL variable
					this.page.identifier = PAGE_IDENTIFIER; // Replace PAGE_IDENTIFIER with your page's unique identifier variable
					};
					*/
					(function() { // DON'T EDIT BELOW THIS LINE
					var d = document, s = d.createElement('script');
					s.src = 'https://moreaboutsports-com.disqus.com/embed.js';
					s.setAttribute('data-timestamp', +new Date());
					(d.head || d.body).appendChild(s);
					})();
					</script>
					<noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
				</div>
			</div>
			<% if @prev.present? %>
				<%= link_to sport_path(@prev), class: "nav previous" do %>
				    <span class="fa fa-chevron-left"></span>
				<% end %>
			<% end %>

			<% if @next.present? %>
				<%= link_to sport_path(@next), class: "nav next" do %>
				    <span class="fa fa-chevron-right"></span>
				<% end %>
			<% end %>
		</div>
	</div>
</body>
</html>
