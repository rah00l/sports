<!DOCTYPE HTML>
<html>
<head>
	<%- title @page_title %>
</head>
<body>
	<!-- Main -->
	<div class="container">
		<div id="preview">
			<div class="innr">
				<div class="row">
					<div class="image fit col-md-12">
						<%= image_tag @sport.attachments.last.file.url(:main).split('/').last  if @sport.attachments.present? %>
					</div>
				</div>
				<div class="row">
					<div class="content col-md-9">
						<header>
							<h2 class="font-bold"><%= @sport.name %></h2>
						</header>
						<div class="row">
							<% class_name = @sport.info_box.present? ? 'col-md-5' : 'col-md-12' %>
							<% if @sport.info_box.present?%>
								<!-- Vcart information -->
								<div class="col-md-5">
									<%= render 'sports_vcard' %>
								</div>
								<!-- Vcart information -->
								<% end %>
							<!-- Basic Inforation about sport -->
							<div class="<%= class_name %>">
								<h1 class="custom-text-color font-bold">Basics</h1>
								<p><%= @sport.basic_info %></p>
							</div>
							<!-- Basic Inforation about sport -->
						</div>

						<!-- History of sport -->
						<h1 class="custom-text-color font-bold">History</h1>

						<p><%= @sport.history %></p>
						<!-- History of sport -->

						<!-- Rules & regulations of sport -->
						<h1 class="custom-text-color font-bold">Rules & regulations</h1>
						<ul class="">
							<% @sport.rules.each do |rule| %>
							   <li class=""><%= rule.description %></li>
							<% end %>
						</ul>
						<!-- Rules & regulations of sport -->

						<h1 class="custom-text-color font-bold">Popularity - List of <%= @sport.name %> Playing Countries</h1>
						More than <%= @sport.countries.size %> countries that play <%= @sport.name %>.
							<div class="well">
								<%= @sport.countries.map(&:name).join(', ') %>
							</div>
					</div>
					<div class="col-md-3 top-margin-50">
						<%= render 'shared/sidebar' %>
					</div>
				</div>
				<div class="row">
					<div class="col-md-12">
					<h1 class="custom-text-color font-bold">Most popular players</h1>
						<div class="well">
							<div id="myCarousel" class="carousel slide">

								<!-- Carousel items -->
								<div class="carousel-inner">
									<div class="item active">
										<div class="row">
											<div class="col-sm-3">
												<!-- <a href="#x"><img src="http://placehold.it/500x500" alt="Image" class="img-responsive"></a> -->
												<%= link_to image_tag '500.png', class: 'img-responsive' %>
											</div>
											<div class="col-sm-3">
												<!-- <a href="#x"><img src="http://placehold.it/500x500" alt="Image" class="img-responsive"></a> -->
												<%= link_to image_tag '500.png', class: 'img-responsive' %>
											</div>
											<div class="col-sm-3">
												<!-- <a href="#x"><img src="http://placehold.it/500x500" alt="Image" class="img-responsive"></a> -->
												<%= link_to image_tag '500.png', class: 'img-responsive' %>
											</div>
											<div class="col-sm-3">
												<!-- <a href="#x"><img src="http://placehold.it/500x500" alt="Image" class="img-responsive"></a> -->
											</div>
										</div>
										<!--/row-->
									</div>
									<!--/item-->
									<div class="item">
										<div class="row">
											<div class="col-sm-3">
												<!-- <a href="#x" class="thumbnail"><img src="http://placehold.it/250x250" alt="Image" class="img-responsive"></a> -->
												<%= link_to image_tag('250.png', class: 'img-responsive'), class: 'thumbnail' %>
											</div>
											<div class="col-sm-3">
												<!-- <a href="#x" class="thumbnail"><img src="http://placehold.it/250x250" alt="Image" class="img-responsive"></a> -->
												<%= link_to image_tag('250.png', class: 'img-responsive'), class: 'thumbnail' %>
											</div>
											<div class="col-sm-3">
												<!-- <a href="#x" class="thumbnail"><img src="http://placehold.it/250x250" alt="Image" class="img-responsive"></a> -->
												<%= link_to image_tag('250.png', class: 'img-responsive'), class: 'thumbnail' %>
											</div>
											<div class="col-sm-3">
												<!-- <a href="#x" class="thumbnail"><img src="http://placehold.it/250x250" alt="Image" class="img-responsive"></a> -->
											</div>
										</div>
										<!--/row-->
									</div>
									<!--/item-->
									<div class="item">
										<div class="row">
											<div class="col-sm-3">
												<!-- <a href="#x" class="thumbnail"><img src="http://placehold.it/250x250" alt="Image" class="img-responsive"></a> -->
												<%= link_to image_tag('250.png', class: 'img-responsive'), class: 'thumbnail' %>
											</div>
											<div class="col-sm-3">
												<!-- <a href="#x" class="thumbnail"><img src="http://placehold.it/250x250" alt="Image" class="img-responsive"></a> -->
